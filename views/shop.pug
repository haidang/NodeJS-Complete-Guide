extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")
  
block content
    main 
      if prods.length > 0
        .grid
          each product in prods
            article.card.product-item 
              header.card__header #{product.title}
                h1.product__tile
              .card__image
                img(src="https://static.wikia.nocookie.net/gensin-impact/images/a/a5/Book_Rex_Incognito.png", alt="Great Book")
              .card__content 
                h2.product__price $19.9
              .product__description A very interesting book about so many even more interesting things!
              .card__actions
                button.btn Add to Cart
      else 
        h1 No Products
          
